<resources>

    <style name="Theme.Piwigo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/piwigo_orange</item>
        <item name="colorPrimaryDark">@color/piwigo_orange_secondary</item>
        <item name="colorAccent">@color/piwigo_orange</item>
    </style>

    <style name="Theme.Piwigo.Login">
        <item name="colorPrimary">@color/piwigo_background_color</item>
        <item name="colorPrimaryDark">@color/piwigo_dark_text_color</item>
        <item name="android:windowBackground">@color/piwigo_background_color</item>
    </style>

    <style name="Theme.Piwigo.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/piwigo_orange</item>
        <item name="colorPrimary">@color/piwigo_orange</item>
    </style>

    <style name="Theme.Piwigo.NavDrawer" />

    <style name="Theme.Piwigo.Login.CardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
