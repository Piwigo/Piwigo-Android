<!-- TODO: use this for the gallery-selection-spinner (or delete) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_selection_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/aspin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/account_image_description"
        android:src="@drawable/ic_piwigo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aspin_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="viewModel.username"
            android:textSize="@dimen/nav_header_user_text_size" />

        <TextView
            android:id="@+id/aspin_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:text="viewModel.url"
            android:textSize="@dimen/nav_header_url_text_size" />

    </LinearLayout>


</LinearLayout>